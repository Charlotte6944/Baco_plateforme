<div class="container pb-5 mb-5">
  <h1>Créer un nouveau tournoi</h1>
  <%= simple_form_for @tournoi, wrapper: :vertical_form do |f| %>
    <%= f.input :nom, placeholder: 'Nom du tournoi' %>
    <%= f.input :ville, placeholder: 'Lieu où se déroule le tournoi' %>
    <%= f.input :catégories, placeholder: "Catégories possible pour s'inscrire" %>
    <%= f.input :date_debut_tournoi, as: :date, html5: true %>
    <%= f.input :date_fin_tournoi, as: :date, html5: true %>
    <%= f.input :inscription_max, as: :date, html5: true %>

    <div class="text-center">
      <%= link_to 'Retour à la liste des tournois', tournois_path, class: 'btn btn-primary mt-3'%>
      <%= f.button :submit, 'Créer le tournoi', class: 'btn btn-primary mt-3'%>
    </div>
  <% end %>
</div>
