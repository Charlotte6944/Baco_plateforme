<div class="container pb-5 mb-5">
  <div class="d-flex justify-content-between">
    <h1>Inscription aux tournois adultes</h1>
    <% if user_signed_in? && current_user.role == 'admin' %>
      <%= link_to 'Créer un tournoi', new_tournoi_path, class: 'btn btn-primary'%>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm">
      <%= render 'shared/textes/Inscription_tournois_adultes' %>
    </div>
    <div class="col-sm">
      <% @tournois.each do |tournoi| %>
        <div class="card text-center mb-4">
          <div class="card-header">
            <%= tournoi.nom %>
            <%= tournoi.ville %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= tournoi.date_tournoi %>
              <%= tournoi.catégories %>
            </h5>
            <p class="card-text">Inscription jusuq'au: <%= tournoi.date_tournoi %></p>
            <br>
            <a href="#" class="btn btn-primary">Je m'inscis</a>
            <a href="#" class="btn btn-primary">Je me désinscris</a>
            <% if user_signed_in? && current_user.role == 'admin' %>
              <a href="#" class="btn btn-primary">Supprimer le tournoi</a>
            <% end %>
          </div>
          <div class="card-footer text-muted">2 days ago</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
